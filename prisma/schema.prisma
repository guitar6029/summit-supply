generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hikingboots {
  id          Int       @id @default(autoincrement())
  brand       String?   @db.VarChar(255)
  price       Decimal?  @db.Decimal(10, 2)
  quantity    Int?
  description String?
  onsale      Boolean?
  sizes       Int[]
  created_at  DateTime? @default(now()) @db.Timestamp(6)
}
