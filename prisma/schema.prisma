generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HikingBoots {
  id       Int      @id @default(autoincrement())
  brand    String   // Removed "?" to make it required
  price    Decimal  @db.Decimal(10, 2) // Allows for accurate pricing
  quantity Int      // Removed "?" to ensure stock is always tracked
  createdAt DateTime @default(now()) // Adds a timestamp for when the product is added
}
